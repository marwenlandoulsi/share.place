{
  "name": "Shareplace",
  "productName": "Shareplace",
  "version": "0.5.8",
  "description": "share place",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/marwenlandoulsi/share.place"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --ia32 --x64 --publish always",
    "build:winDev": "electron-builder --win --ia32 --x64",
    "build:mac": "electron-builder --mac --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "dateformat": "^2.0.0",
    "electron-log": "^2.2.14",
    "electron-notifications": "^1.0.0",
    "electron-notify": "^0.1.0",
    "electron-packager": "^8.5.2",
    "electron-proxy-agent": "^1.0.2",
    "electron-updater": "^2.18.2",
    "fs-extra": "^2.0.0",
    "http": "0.0.0",
    "nedb-session-store": "^1.1.1",
    "nodemailer": "^4.1.0",
    "path": "^0.12.7",
    "form-data": "^2.2.0"
  },
  "build": {
    "icon": "./shareElecIco.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "marwenlandoulsi",
        "repo": "share.place"
      }
    ],
    "asar": false,
    "appId": "com.share.place",
    "win": {
      "icon": "./shareElecIco.ico",
      "target": "nsis",
      "publisherName": "Shareplace SAS"
    },
    "nsis": {
      "installerIcon": "./shareElecIco.ico",
      "perMachine": false,
      "oneClick": true,
      "runAfterFinish": true
    },
    "mac": {
      "category": "public.sharePlace.business",
      "icon": "./build/icons/mac/icon.icns",
      "type": "development"
    },
    "dmg": {
      "title": "shareplace",
      "icon": "./build/icons/mac/icon.icns"
    },
    "pkg": {
      "allowAnywhere": false,
      "allowCurrentUserHome": true,
      "allowRootDirectory": false
    },
    "directories": {
      "buildResources": "./build"
    },
    "protocols": [
      {
        "name": "shareplace",
        "role": "Viewer",
        "schemes": [
          "sp",
          "SP"
        ]
      }
    ]
  },
  "homepage": "https://www.share.place/",
  "keywords": [
    "Electron",
    "Windows",
    "autoupdate"
  ],
  "author": "Shareplace SAS",
  "copyright": "Â©2017 Shareplace SAS.",
  "devDependencies": {
    "electron": "^1.8.8",
    "electron-builder": "^19.27.7"
  }
}
