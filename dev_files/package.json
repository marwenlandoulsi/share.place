{
  "name": "Shareplace",
  "version": "0.5.0",
  "description": "share place dev",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/marwenlandoulsi/share.place"
  },
  "scripts": {
    "start": "set DEV=true && electron .",
    "build:win": "build --win --ia32 --x64 --publish always",
    "build:winDev": "build --win --ia32 --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "dateformat": "^2.0.0",
    "electron-log": "^1.3.0",
    "electron-notifications": "^1.0.0",
    "electron-notify": "^0.1.0",
    "electron-packager": "^8.5.2",
    "electron-proxy-agent": "^1.0.2",
    "electron-updater": "^2.18.2",
    "fs-extra": "^2.0.0",
    "nodemailer": "^4.1.0",
    "http": "0.0.0",
    "nedb-session-store": "^1.1.1",
    "path": "^0.12.7"
  },
  "build": {
    "icon": "./shareElecIco.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "marwenlandoulsi",
        "repo": "share.place.qa"
      }
    ],
    "asar": false,
    "appId": "com.share.place.qa",
    "win": {
      "icon": "./shareElecIco.ico",
      "target": "nsis",
      "publisherName": "Shareplace SAS"
    },
    "nsis": {
      "installerIcon": "./shareElecIco.ico",
      "perMachine": false,
      "oneClick": true,
      "runAfterFinish": true
    },
    "mac": {
      "category": "public.sharePlace.business",
      "icon": "./build/icons/mac/icon.icns",
      "type": "development"
    },
    "dmg": {
      "title":"shareplace",
      "icon": "./build/icons/mac/icon.icns"
    },
    "pkg": {
      "allowAnywhere": false,
      "allowCurrentUserHome": true,
      "allowRootDirectory": false
    },
    "directories": {
      "buildResources": "./build"
    },
    "protocols": [{
      "name": "shareplace",
      "role": "Viewer",
      "schemes": ["sp", "SP"]
    }]
  },
  "keywords": [
    "Electron",
    "Windows",
    "autoupdate"
  ],
  "author": "share.place",
  "license": "ISC",
  "copyright": "Â©2017 Share.Place, Inc.",
  "devDependencies": {
    "electron": "1.7.9",
    "electron-builder": "^19.27.7"
  }
}
